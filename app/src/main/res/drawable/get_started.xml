<!-- res/drawable/background_with_gradient.xml -->
<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom layer: background image -->
    <item>
        <bitmap
            android:gravity="fill"
            android:src="@drawable/get_started_bg"
            tools:ignore="ResourceCycle" />
    </item>

    <!-- Top layer: gradient overlay -->
    <item android:top="100dp" android:bottom="0dp" android:gravity="fill_horizontal|top">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#FFFFFF"
            android:endColor="#00000000"
            android:angle="90" />
        </shape>
    </item>
</layer-list>
